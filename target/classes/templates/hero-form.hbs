{{#partial "content"}}
   {{#if editHero}}
       <h1>Edit this Hero!</h1>
       <form action="/heroes/{{hero.id}}" method="post">
          <br>
          <label for="name">Edit this Hero's name</label>
          <input id="name" name="name" type="text" value="{{hero.name}}">
          <br>
          <label for="squadId">Update this hero's squad:</label>
          <select id="squadId" name="squadId">
             {{#each squads}}
                <option value="{{id}}">{{name}}</option>
             {{/each}}
          </select>
          <p>Don't see the right squad?<a href="/squads/new">Add a new one first.</a></p>
          <button type="submit" class="btn btn-default">Go!</button>
       </form>
   {{else}}
       <h2>Add a new hero!</h2>
       <form action="/heroes" method="post">
         {{#if categories}}
             <label for="name">Hero Description</label>
             <input id="name" name="name" type="text">
             <label for="squadId">Squad this hero as:</label>
             <select id="squadId" name="squadId">
                 {{#each squads}}
                     <option value="{{id}}">{{name}}</option>
                 {{/each}}
             </select>
             <p>Don't see the right squad?<a href="/squads/new">Add a new one first.</a></p>
         {{else}}
             <h3> You'll need to add a squad before you add a hero. <a href="/squads/new">Add one here.</a> </h3>
         {{/if}}
         <button type="submit" class="btn btn-default">Go!</button>
       </form>
   {{/if}}
{{/partial}}

{{> layout.hbs}}